<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="invitation"
            type="com.kulenina.questix.model.AllianceInvitation" />
        <variable
            name="listener"
            type="com.kulenina.questix.adapter.AllianceInvitationAdapter.OnInvitationActionListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="12dp"
        android:layout_marginBottom="8dp"
        android:elevation="4dp"
        android:layout_marginHorizontal="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{invitation.allianceName}"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{`Invited by ` + invitation.inviterUsername}"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_decline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decline"
                android:textSize="12sp"
                android:layout_marginEnd="8dp"
                android:onClick="@{() -> listener.onDeclineInvitation(invitation)}"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:strokeColor="@android:color/holo_red_dark"
                app:cornerRadius="8dp"
                android:textColor="@android:color/holo_red_dark"
                app:icon="@drawable/ic_close"
                app:iconTint="@android:color/holo_red_dark" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accept"
                android:textSize="12sp"
                android:onClick="@{() -> listener.onAcceptInvitation(invitation)}"
                app:backgroundTint="@android:color/holo_green_dark"
                app:cornerRadius="8dp"
                android:textColor="@android:color/white"
                app:icon="@drawable/ic_check"
                app:iconTint="@android:color/white" />

        </LinearLayout>

    </LinearLayout>

</layout>