<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Equipment Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/textViewEquipmentName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Equipment Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/textViewEquipmentType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TYPE"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@color/accent_color"
                android:padding="4dp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Equipment Effect -->
        <TextView
            android:id="@+id/textViewEquipmentEffect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Effect: +10% power"
            android:textSize="14sp"
            android:textStyle="italic"
            android:textColor="@color/accent_color"
            android:layout_marginBottom="12dp" />

        <!-- Price and Purchase Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textViewEquipmentPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="100 coins"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary_text" />

            <Button
                android:id="@+id/buttonPurchase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Purchase"
                android:textColor="@android:color/white"
                android:background="@color/primary_color"
                android:padding="12dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
