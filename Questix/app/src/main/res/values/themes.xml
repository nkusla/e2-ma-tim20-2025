<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Questix" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Questix" parent="Base.Theme.Questix" />

    <!-- Dialog Theme -->
    <style name="DialogTheme" parent="Theme.Material3.Light.Dialog">
        <item name="android:windowMinWidthMajor">400dp</item>
        <item name="android:windowMinWidthMinor">400dp</item>
    </style>
    <style name="CalendarTheme" parent="Theme.AppCompat.Light">
    </style>

    <style name="CalendarDateText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="CalendarWeekText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
</resources>