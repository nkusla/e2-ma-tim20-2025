<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="memberProgress"
            type="com.kulenina.questix.model.MissionProgress" />
        <variable
            name="memberName"
            type="String" />
        <variable
            name="isCurrentUser"
            type="boolean" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardBackgroundColor="#2A2A4E"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Member Name and Current User Indicator -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textViewMemberName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@{memberName}"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="John Doe" />

                <TextView
                    android:id="@+id/textViewCurrentUserIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(You)"
                    android:textColor="#A0A0FF"
                    android:textSize="12sp"
                    android:visibility="@{isCurrentUser ? View.VISIBLE : View.GONE}"
                    tools:text="(You)"
                    tools:visibility="visible" />

            </LinearLayout>

            <!-- Total HP Contribution -->
            <TextView
                android:id="@+id/textViewTotalContribution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{String.valueOf(memberProgress.totalHpContribution)}"
                android:textColor="#FFD700"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="25" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total HP Contribution"
                android:textColor="#A0A0FF"
                android:textSize="12sp"
                tools:text="Total HP Contribution" />

            <!-- Detailed Breakdown -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{String.valueOf(memberProgress.purchasesCount)}"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text="5" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Purchases"
                        android:textColor="#CCCCCC"
                        android:textSize="10sp"
                        tools:text="Purchases" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{String.valueOf(memberProgress.successfulHitsCount)}"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text="8" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Battles"
                        android:textColor="#CCCCCC"
                        android:textSize="10sp"
                        tools:text="Battles" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{String.valueOf(memberProgress.lightTasksCount)}"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text="12" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Light Tasks"
                        android:textColor="#CCCCCC"
                        android:textSize="10sp"
                        tools:text="Light Tasks" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{String.valueOf(memberProgress.heavyTasksCount)}"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text="3" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Heavy Tasks"
                        android:textColor="#CCCCCC"
                        android:textSize="10sp"
                        tools:text="Heavy Tasks" />

                </LinearLayout>

            </LinearLayout>

            <!-- Message Days -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Messages: "
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    tools:text="Messages: " />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{String.valueOf(memberProgress.messageDaysCount)}"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:text="7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/14"
                    android:textColor="#CCCCCC"
                    android:textSize="12sp"
                    tools:text="/14" />

            </LinearLayout>

            <!-- Missed Task Indicator -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="⚠️ Has Missed Tasks"
                android:textColor="#E94560"
                android:textSize="12sp"
                android:visibility="@{memberProgress.hasMissedTask ? View.VISIBLE : View.GONE}"
                tools:text="⚠️ Has Missed Tasks"
                tools:visibility="visible" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>
