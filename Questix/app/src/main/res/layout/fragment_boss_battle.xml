<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Boss Battle Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_boss"
                    android:layout_marginEnd="12dp"
                    android:tint="@color/primary_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Boss Battle"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_boss_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level 1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text" />

            </LinearLayout>

            <!-- Boss Visual Representation -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_background"
                    android:padding="16dp">

                    <!-- Boss Image Placeholder -->
                    <ImageView
                        android:id="@+id/iv_boss"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_boss"
                        android:tint="@color/primary_text"
                        android:scaleType="centerInside" />

                    <!-- Boss Name -->
                    <TextView
                        android:id="@+id/tv_boss_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_boss"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:text="Shadow Boss"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_text" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!-- Boss HP Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Boss HP"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_text" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_boss_hp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="200/200"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_red_dark" />

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/pb_boss_hp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:max="100"
                    android:progress="100"
                    android:progressTint="@android:color/holo_red_dark"
                    android:progressBackgroundTint="@android:color/darker_gray" />

            </LinearLayout>

            <!-- User Power Points -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Power"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_text" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_user_power"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50 PP"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_blue_dark" />

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/pb_user_power"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:max="100"
                    android:progress="50"
                    android:progressTint="@android:color/holo_blue_dark"
                    android:progressBackgroundTint="@android:color/darker_gray" />

            </LinearLayout>

            <!-- Active Equipment Button -->
            <Button
                android:id="@+id/btn_view_equipment"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="View Active Equipment"
                android:textSize="16sp"
                android:background="@drawable/button_primary_selector"
                android:textColor="@android:color/white"
                android:drawableStart="@drawable/ic_inventory"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Battle Stats -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Attacks Left"
                        android:textSize="14sp"
                        android:textColor="@color/primary_text" />

                    <TextView
                        android:id="@+id/tv_attacks_remaining"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5/5"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_text" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hit Chance"
                        android:textSize="14sp"
                        android:textColor="@color/primary_text" />

                    <TextView
                        android:id="@+id/tv_hit_chance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="67%"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_orange_dark" />

                </LinearLayout>

            </LinearLayout>

            <!-- Attack Button -->
            <Button
                android:id="@+id/btn_attack"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ATTACK!"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/button_primary_selector"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp" />

            <!-- Battle Result -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_battle_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_battle_outcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Victory!"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_green_dark"
                        android:layout_marginBottom="16dp" />

                    <!-- Treasure Chest -->
                    <ImageView
                        android:id="@+id/iv_treasure_chest"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_coin"
                        android:layout_marginBottom="16dp"
                        android:tint="@android:color/holo_orange_dark" />

                    <!-- Rewards -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_coins_reward"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+ 200 Coins"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/holo_orange_dark"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tv_equipment_reward"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+ Power Gloves"
                            android:textSize="16sp"
                            android:textColor="@color/primary_text"
                            android:visibility="gone" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_continue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Continue"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/button_primary_selector"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</layout>
