<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        tools:context=".ui.task.TaskDetailFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_task_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Active"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingBottom="8dp"
                android:textColor="@color/colorAccent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Task Name"
                android:textColor="@color/colorTextPrimary"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_task_status" />

            <EditText
                android:id="@+id/et_task_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Enter a short name"
                android:inputType="textCapSentences"
                android:minHeight="48dp"
                android:textColor="@color/colorTextPrimary"
                android:background="@drawable/bg_input_field"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@id/tv_title_name" />

            <TextView
                android:id="@+id/tv_title_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Description"
                android:textColor="@color/colorTextPrimary"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_task_name" />

            <EditText
                android:id="@+id/et_task_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Detailed task description"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:minLines="3"
                android:maxLines="5"
                android:textColor="@color/colorTextPrimary"
                android:background="@drawable/bg_input_field"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@id/tv_title_description" />

            <TextView
                android:id="@+id/tv_title_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Category"
                android:textColor="@color/colorTextPrimary"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_task_description" />

            <TextView
                android:id="@+id/tv_category_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:minHeight="48dp"
                android:padding="12dp"
                android:background="@drawable/bg_input_field"
                android:textColor="@color/colorTextPrimary"
                app:layout_constraintTop_toBottomOf="@id/tv_title_category"
                tools:text="Personal Development" />

            <TextView
                android:id="@+id/tv_title_execution_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Execution Time"
                android:textColor="@color/colorTextPrimary"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_category_name" />

            <LinearLayout
                android:id="@+id/layout_execution_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_title_execution_time">

                <Button
                    android:id="@+id/btn_select_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Select Date"
                    android:layout_marginEnd="8dp"
                    style="@style/Widget.AppCompat.Button.Colored" />

                <Button
                    android:id="@+id/btn_select_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Select Time"
                    style="@style/Widget.AppCompat.Button.Colored" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_title_difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Task Difficulty (XP)"
                android:textColor="@color/colorTextPrimary"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_execution_time" />

            <Spinner
                android:id="@+id/spinner_difficulty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:entries="@array/task_difficulties"
                android:background="@drawable/bg_spinner"
                android:minHeight="48dp"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_title_difficulty" />

            <TextView
                android:id="@+id/tv_title_importance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Task Importance (XP)"
                android:textColor="@color/colorTextPrimary"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spinner_difficulty" />

            <Spinner
                android:id="@+id/spinner_importance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:entries="@array/task_importance"
                android:background="@drawable/bg_spinner"
                android:minHeight="48dp"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_title_importance" />

            <LinearLayout
                android:id="@+id/layout_action_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/spinner_importance">

                <Button
                    android:id="@+id/btn_delete_task"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Delete"
                    android:backgroundTint="@color/colorError"
                    android:layout_marginEnd="8dp"
                    style="@style/Widget.AppCompat.Button.Colored" />

                <Button
                    android:id="@+id/btn_pause_resume"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pause"
                    android:backgroundTint="@color/colorWarning"
                    android:layout_marginEnd="8dp"
                    style="@style/Widget.AppCompat.Button.Colored" />

                <Button
                    android:id="@+id/btn_update_task"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Update"
                    android:backgroundTint="@color/colorPrimary"
                    style="@style/Widget.AppCompat.Button.Colored" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>